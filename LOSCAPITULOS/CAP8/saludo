if [ "$#" -ne 0 ]
then
    :
else
    hora=`date +%H`
    if [ "$hora" -gt 0 -a "$hora" -lt 12 ]
    then
        echo  -n "Buenos dias, "
    else
        if [ "$hora" -ge 12 -a "$hora" -lt 17 ]
        then
            echo -n "Buenas tardes, "
        else
            echo -n "Buenas noches,  "
        fi
    fi
fi
echo $LOGNAME
echo "La hora es:  `date +%H:%M:%S` "
